{%- layout none -%}
{%- capture results -%}
  {%- for item in search.results -%}
    {%- assign product = item -%}
    {
      "title"    : {{ product.title | json | strip }},
      "url"      : {{ product.url | within: product.collections.last | json | strip }},
      "thumbnail": {{ product.featured_image.src | product_img_url: 'thumb' | json | strip }}
    }
    {%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
{%- endcapture -%}
{
  "results_count": {{ search.results_count | strip }},
  "results": [{{ results | strip }}]
}
